@model UserModel
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="ID"/>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digete o nome do Contato">
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digete o e-mail do Contato">
    </div>
    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digete o celular do Contato">
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="text" asp-for="Senha" class="form-control" placeholder="Digete sua senha">
    </div>
    <br />

    <div class="d-grid gap-2 text-center">
        <button type="submit" class="btn btn-success btn-sm text-center">Alterar</button>
        <a class="btn btn-secondary btn-sm" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>

</form>