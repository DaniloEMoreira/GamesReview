@model List<UserModel>
@{
    ViewData["Title"] = "Lista de Contatos";
}

<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar Novo Contato</a>
</div>
<br />
<h1>Lista de Contatos</h1>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">E-mail</th>
            <th scope="col">Celular</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            foreach(UserModel Contato in Model)
            {
                <tr>
                    <th scope="row">@Contato.ID</th>
                    <td>@Contato.Nome</td>
                    <td>@Contato.Email</td>
                    <td>@Contato.Celular</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a role="button" class="btn btn-warning" asp-route-id="@Contato.ID" asp-controller="Contato" asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@Contato.ID" asp-action="ApagarConfirmacao">Apagar</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
