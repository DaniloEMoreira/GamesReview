@model GameModel
@{
    ViewData["Title"] = "Confirmação de apagar o contato";
}


<div class="text-center">
    <h3>Realmente deseja apagar este contato (@Model.Name)?</h3>
</div>

<div class="d-grid gap-2 text-center">
    <a class="btn btn-primary" role="button" asp-controller="Home" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger" role="button" asp-controller="Home" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>
</div>
