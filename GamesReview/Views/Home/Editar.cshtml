@model GameModel
@{
    ViewData["Title"] = "Add Game";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Jogo</h1>
</div>

<form asp-controller="Home" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Name">Nome</label>
        <input type="text" required asp-for="Name" class="form-control" placeholder="Digete o nome do jogo">
    </div>
    <div class="form-group">
        <label for="Description">Descrição</label>
        <input type="text" asp-for="Description" required class="form-control" placeholder="Digete a descrição do jogo">
    </div>
    <div class="form-group">
        <label for="Img">URL da Imagem</label>
        <input type="text" asp-for="Img" required class="form-control" placeholder="URL da imamgem aqui">
    </div>
    <div class="form-group">
        <label for="Developer">Desenvolvedora</label>
        <input type="text" asp-for="Developer" required class="form-control" placeholder="Digete a Desenvolvedora do jogo">
    </div>
    <div class="form-group">
        <label for="Price">Preço</label>
        <input type="number" min="0" max="1000" required asp-for="Price" class="form-control" placeholder="Digete o preço do jogo">
    </div>
    <div class="form-group">
        <label for="ReleaseDate">Data de lançamento</label>
        <input type="date" asp-for="ReleaseDate" required class="form-control" placeholder="Digete a data de lançamento do jogo">
    </div>
    <div class="form-group">
        <label for="Nota">Nota</label>
        <input type="number" min="0" max="5" asp-for="Nota" required class="form-control" placeholder="Digete a nota do jogo 0 - 5">
    </div>

    <br />

    <div class="d-grid gap-2 text-center">
        <button type="submit" class="btn btn-success btn-sm text-center">Alterar</button>
        <a class="btn btn-secondary btn-sm" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
    </div>

</form>