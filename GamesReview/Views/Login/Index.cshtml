@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="Digite seu Email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="Senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="Senha" placeholder="Digite sua Senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    </br>
    <div class="d-grid gap-2 text-center">
        <button type="submit" class="btn btn-success btn-sm text-center">Login</button>
    </div>
    
</form>